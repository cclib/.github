{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],
  "labels": ["dependencies"],
  "nix": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchManagers": ["github-actions"],
      "addLabels": ["github_actions"]
    },
    {
      "matchManagers": ["nix"],
      "addLabels": ["nix"]
    },
    {
      "matchManagers": ["pre-commit"],
      "addLabels": ["pre-commit"]
    },
    {
      "matchManagers": [
        "pep621",
        "pip-compile",
        "pip_requirements",
        "pip_setup",
        "pipenv",
        "poetry",
        "pyenv",
        "runtime-version",
        "setup-cfg"
      ],
      "addLabels": ["python"]
    }
  ],
  "pre-commit": {
    "enabled": true
  }
}
